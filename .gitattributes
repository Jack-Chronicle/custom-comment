# Auto detect text files and perform LF normalization
* text=auto

# Enforce LF for source and config files
*.js   text eol=lf
*.ts   text eol=lf
*.css  text eol=lf
*.json text eol=lf
*.md   text eol=lf
*.yml  text eol=lf

# Treat images as binary
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.ico  binary
*.svg  text

# Lock files
package-lock.json text eol=lf
yarn.lock        text eol=lf
pnpm-lock.yaml   text eol=lf

# Shell scripts
*.sh   text eol=lf
*.bat  text eol=crlf
*.cmd  text eol=crlf
